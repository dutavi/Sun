<p id="notice"><%= notice %></p>

<h1> <ins>Phrases </ins></h1>
<%= link_to 'New Phrase', new_phrase_path, class: "btn btn-primary" %>
<hr/>
<table>
  <thead>
    <tr>
      <th>Sentence</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @phrases.each do |phrase| %>
      <tr>
        <td><%= phrase.sentence %></td>
        <td><%= link_to 'Show', phrase, class: "btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_phrase_path(phrase), class: "btn btn-danger" %></td>
        <td><%= link_to 'Destroy', phrase, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark" %></td>
        <td><%= pluralize(phrase.comments.count, "Comments") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<br>