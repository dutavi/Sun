<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><strong><h3>Sentence</h3></strong><i class="fas fa-angle-down"></i></div>
    <div class="panel-body"> <%= @phrase.sentence %></div>
  </div>
<br/>
<%= link_to 'Edit', edit_phrase_path(@phrase), class: "btn btn-warning" %> |
 |
<%= link_to 'Destroy', @phrase, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
<br/>
<br/>

<%= form_with model: [@phrase, @comment], local: true do |f| %>
<%= f.text_field :body %> 
<%= f.submit "Comment" %> 
<% end %>
<hr/>

<div id="comment_pane">
<% @comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment %>
  <% end %>
</div>
<%= link_to 'Back', phrases_path, class: "btn btn-dark" %>
</div>